<% include ../partials/header %>

    <div class=row>
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin:30px auto">
        <!--must override the post with PUT-->
        <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <!--Changing the placeholder to value to render the templet as the input value-->
                <!--The name property must be the same as in the show.ejs templet!!!!-->
                <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
            </div>
            <div class="form-group">
                <!--step gives us the ability to choose the amount to raise 0.01-->
                <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" min="0" step="1">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[desc]" value="<%=campground.desc%>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </div>
        </form>
            <a href="/campgrounds"> Go back to Campgrounds</a>
        </div>
    </div>

<% include ../partials/footer %>