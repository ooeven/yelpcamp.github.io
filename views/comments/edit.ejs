<% include ../partials/header %>

    <div class=row>
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin:30px auto">
        <!--must override the post with PUT-->
        <form action="/campgrounds/<%= campground_id%>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <!--Changing the placeholder to value to render the templet as the input value-->
                <!--The name property must be the same as in the show.ejs templet!!!!-->
                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </div>
        </form>
            <a href="/campgrounds"> Go back to Campgrounds</a>
        </div>
    </div>

<% include ../partials/footer %>